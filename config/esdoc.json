{
  "source": "./lib",
  "destination": "./doc",
  "includes": [
    "\\.js$"
  ],
  "excludes": [
    "\\.spec\\.js$"
  ],
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {
          "enable": true
        },
        "coverage": {
          "enable": true
        },
        "accessor": {
          "access": [
            "public",
            "protected"
          ],
          "autoPrivate": true
        },
        "undocumentIdentifier": {"enable": true},
        "unexportedIdentifier": {"enable": false},
        "typeInference": {"enable": true},
        "brand": {
          "title": "MagikVector",
          "description": "Vector class for 2D, 3D and multi dimensional vector calculations",
          "repository": "https://github.com/magikMaker/magik-vector",
          "site": "https://github.com/magikMaker",
          "author": "https://github.com/magikMaker"
        }
      }
    }
  ]
}
